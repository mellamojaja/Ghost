@model Ghost.MVC.Models.GamePlayModel

@{
    ViewBag.Title = "Play";
}

<h2>Playing</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <hr />
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-2">
                <h4>
                    Player 1: @Model.Player.Name
                    <span class="badge">@Model.Player.NumberOfVictories / @Model.Player.NumberOfGames</span>
                </h4>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.EnablePlayerHelp, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.EnablePlayerHelp)
                </div>
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                <div class="alert alert-info">
                    Analysis:Ana lysis: Analysis :Analysis:Analys is: Analysis:Analysis: Analysis:Analysis:Analysis: Ana lysis:Analysis:
                    Analysis:An alysis:Analysis:Analysis: Analysis:Analysis:Analysis:
                    Analysis:Anal ysis:A nalysis:Analysis:Analysis:
                    @if (Model.EnablePlayerHelp)
                    { @Model.Analysis.Explanation }
                </div>
            </div>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.NewMove, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-2 col-md-pull-0">
                @Html.EditorFor(model => model.NewMove, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-2">
                <button type="submit" value="Add" class="btn btn-primary">Add</button>
                <button type="button" value="Pass" class="btn btn-danger">Pass</button>
            </div>
        </div>
        <div class="form-group">
            <div>
                @Html.ValidationMessageFor(model => model.NewMove, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="col-md-offset-2">
        @{
            Html.Display("$> ");
            var word = "Juanalfredo";
            for (var i = 0; i < word.Length; i++)
            {
                if (i % 2 == 0)
                {
                    Html.Display(word.Substring(i, 1), new { style : "color:#FF0000;" });
                }
                else
                {
                    Html.Display(word.Substring(i, 1));
                }
            }
        }
    </div>

        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-2">
                    <h4>
                        Player 2: Computer
                    </h4>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <div class="alert alert-info">
                        Analysis:Ana lysis: Analysis :Analysis:Analys is: Analysis:Analysis: Analysis:Analysis:Analysis: Ana lysis:Analysis:
                        Analysis:An alysis:Analysis:Analysis: Analysis:Analysis:Analysis:
                        Analysis:Anal ysis:A nalysis:Analysis:Analysis:
                        @if (Model.EnablePlayerHelp)
                { @Model.Analysis.Explanation }
                    </div>
                </div>
            </div>
        </div>
}
