@model Ghost.MVC.Models.GamePlayModel

@{
    ViewBag.Title = "Play";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-inline col-md-offset-2">
        <div class="form-group">
            <div>
                <span class="word">@Html.Raw("Word >")</span>
            </div>
        </div>
        <div class="form-group">
            <div>
                @{var word = "Juanalfredo".ToLower();}
                @for (var i = 0; i < word.Length; i++)
                {
                    if (i % 2 == 0)
                    {
                        <span class="human-player word">@Html.Raw(word.Substring(i, 1))</span>
                    }
                    else
                    {
                        <span class="computer-player word">@Html.Raw(word.Substring(i, 1))</span>
                    }
                }
            </div>
        </div>
        @if (Model.Analysis.Winner < 0)
        {
            <div class="form-group">
                @Html.EditorFor(model => model.NewMove, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                <button type="submit" value="Add" class="btn btn-primary">Add</button>
                <button type="button" value="Pass" class="btn btn-danger">Pass</button>
            </div>
        }
        else
        {
            <div class="form-group">
                <button type="submit" value="Play again" class="btn btn-primary">Play again</button>
            </div>
        }
    </div>

    if (Model.Analysis.Winner >= 0)
    {
        <div class="form-horizontal col-md-offset-1 col-md-10">
            <div class="row">
                <div class="form-group">
                    <div>
                        <div class="alert alert-danger">
                            Analysis:Ana lysis: Analysis :Analysis:Analys is: Analysis:Analysis: Analysis:Analysis:Analysis: Ana lysis:Analysis:
                            Analysis:An alysis:Analysis:Analysis: Analysis:Analysis:Analysis:
                            Analysis:Anal ysis:A nalysis:Analysis:Analysis:
                            @if (Model.EnablePlayerHelp)
                            { @Model.Analysis.Explanation }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

<hr />

<div class="form-horizontal">
    <div class="row">
        <div class="col-md-offset-1 col-md-4">
            @*Human player region*@
            <div class="form-group">
                <div>
                    <h4>
                        Player 1: @Model.Player.Name
                        <span class="badge">@Model.Player.NumberOfVictories / @Model.Player.NumberOfGames</span>
                    </h4>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.EnablePlayerHelp, htmlAttributes: new { @class = "control-label" })
                <div>
                    <div class="checkbox">
                        @Html.CheckBoxFor(model => model.EnablePlayerHelp)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div>
                    <div class="alert alert-info">
                        Analysis:Ana lysis: Analysis :Analysis:Analys is: Analysis:Analysis: Analysis:Analysis:Analysis: Ana lysis:Analysis:
                        Analysis:An alysis:Analysis:Analysis: Analysis:Analysis:Analysis:
                        Analysis:Anal ysis:A nalysis:Analysis:Analysis:
                        @if (Model.EnablePlayerHelp)
                        { @Model.Analysis.Explanation }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-offset-1 col-md-4">
            @*Computer player region*@
            <div class="form-group">
                <div>
                    <h4>
                        Player 2: Computer
                    </h4>
                </div>
            </div>
            <div class="form-group">
                <div>
                    <div class="alert alert-info">
                        Analysis:Ana lysis: Analysis :Analysis:Analys is: Analysis:Analysis: Analysis:Analysis:Analysis: Ana lysis:Analysis:
                        Analysis:An alysis:Analysis:Analysis: Analysis:Analysis:Analysis:
                        Analysis:Anal ysis:A nalysis:Analysis:Analysis:
                        @if (Model.EnablePlayerHelp)
                        { @Model.Analysis.Explanation }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}
